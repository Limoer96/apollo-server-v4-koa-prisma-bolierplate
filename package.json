{
  "name": "apollo-server-v4-koa-prisma-bolierplate",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --no-notify --respawn --transpile-only src/server",
    "preinstall": "npx only-allow pnpm",
    "start": "node -r ./prod-path.js dist/src/server.js",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc && tsc-alias",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "studio": "prisma studio",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node -r tsconfig-paths/register --transpile-only src/schema",
    "postinstall": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm release:only",
    "release:only": "changeset publish --registry=https://registry.npmjs.com/",
    "commit": "cz"
  },
  "packageManager": "pnpm@8.2.0",
  "dependencies": {
    "@apollo/server": "4.5.0",
    "@as-integrations/koa": "^1.0.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@prisma/client": "^5.6.0",
    "dotenv": "^16.0.3",
    "graphql": "16.6.0",
    "graphql-scalars": "1.21.3",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-static": "^5.0.0",
    "nexus": "1.3.0",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.3",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@fruits-chain/eslint-config-preset": "^0.2.2",
    "@fruits-chain/prettier-config-preset": "^0.0.3",
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^20.1.2",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prisma": "^5.6.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "^1.8.8",
    "typescript": "4.9.5"
  },
  "prettier": "@fruits-chain/prettier-config-preset",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}
